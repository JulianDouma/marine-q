#!/bin/bash

## Description: Run GrumPHP quality checks
## Usage: grumphp [run|git:pre-commit|git:commit-msg]
## Example: "ddev grumphp" (default run) or "ddev grumphp git:pre-commit"

case "$1" in
    "git:pre-commit")
        echo "ğŸ” Running GrumPHP pre-commit checks..."
        vendor/bin/grumphp git:pre-commit
        ;;
    "git:commit-msg")
        echo "ğŸ“ Running GrumPHP commit message validation..."
        vendor/bin/grumphp git:commit-msg "$2"
        ;;
    "run"|"")
        echo "ğŸ”§ Running all GrumPHP tasks..."
        vendor/bin/grumphp run
        ;;
    *)
        echo "ğŸ“‹ Running GrumPHP with custom arguments: $*"
        vendor/bin/grumphp "$@"
        ;;
esac