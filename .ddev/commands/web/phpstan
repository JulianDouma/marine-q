#!/bin/bash

## Description: Run PHPStan static analysis
## Usage: phpstan [baseline]
## Example: "ddev phpstan" or "ddev phpstan baseline"

if [ "$1" = "baseline" ]; then
    echo "ğŸ“Š Generating PHPStan baseline..."
    composer phpstan:baseline
else
    echo "ğŸ” Running PHPStan analysis..."
    composer phpstan
fi